<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<%= link_to '+ New Idea'.html_safe, new_idea_path,  :class => "btn btn-success pull-right"  %>
<div class="table-responsive">          
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= image_tag(idea.picture_url, :width => 250, :height => 200) if idea.picture.present? %></td>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= link_to 'Show'.html_safe, idea ,  :class => "btn btn-primary"  %></td>
        <td><%= link_to 'Edit'.html_safe, edit_idea_path(idea) ,  :class => "btn btn-warning"  %></td>
        <td><%= link_to 'Destroy'.html_safe, idea, method: :delete, data: { confirm: 'Are you sure?' } ,  :class => "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<br>

